= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal col-sm-10' } do |f|
  = f.error_notification
  = f.input :email, :required => true, :autofocus => true

  .form-actions
    = f.button :submit, t('.submit_buton'), class: 'btn btn-lg btn-primary btn-block'

= render "devise/shared/links"
