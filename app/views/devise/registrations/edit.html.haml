- @page_title = t('.title')

= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal col-sm-10' } do |f|
  = f.error_notification
  = f.input :email, required: true, autofocus: true
  - if devise_mapping.confirmable? and resource.pending_reconfirmation?
    %p
      Currently waiting confirmation for: rsource.unconfirmed_email
  = f.input :password, autocomplete: "off", hint: t('.password_hint'), required: false
  = f.input :password_confirmation, required: false
  = f.input :current_password, required: true
  .form-actions
    = f.button :submit, t('.submit_button'), class: 'btn btn-lg btn-primary btn-block'

%span.clearfix
%br

.col-sm-10
  %h2= t('.destroy_title')
  %hr
    = link_to t('.destroy_link'), registration_path(resource_name), data: { confirm: t('.destroy_confirm') }, method: :delete, class: 'btn btn-lg btn-danger btn-block btn-white'

