- @page_title = t('.title')

= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal col-sm-10' } do |f|
  = f.error_notification
  = f.input :email, required: true, autofocus: true
  = f.input :password, required: true
  = f.input :password_confirmation, required: true

  .form-actions
    = f.button :submit, t('.submit_button'), class: 'btn btn-lg btn-primary btn-block'
= render "devise/shared/links"
